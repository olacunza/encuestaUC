@model AssesmentUC.Service.DTO.Reporte.ReporteEncuestaDTO.ReporteEncuestaDto
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Encuesta de Estudiantes al Docente</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            font-size: 11px;
            color: #333;
            margin: 40px;
        }

        h1, h2, h3, h4 {
            color: #003366;
            margin-bottom: 6px;
        }

        .header {
            text-align: center;
            border-bottom: 2px solid #003366;
            padding-bottom: 10px;
            margin-bottom: 25px;
        }

        .info p {
            margin: 3px 0;
        }

        .bloque {
            margin-top: 20px;
        }

            .bloque h3 {
                background-color: #f2f2f2;
                border-left: 5px solid #003366;
                padding: 6px;
                font-size: 13px;
            }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 8px;
            font-size: 10px;
        }

        th, td {
            border: 1px solid #ccc;
            padding: 5px;
            text-align: center;
        }

        th {
            background-color: #f8f9fa;
        }

        .footer {
            margin-top: 40px;
            text-align: center;
            font-size: 9px;
            color: #777;
        }

        .summary {
            margin-top: 20px;
            border-top: 2px solid #003366;
            padding-top: 10px;
        }

            .summary table {
                width: 60%;
                margin: auto;
            }

            .summary td {
                text-align: left;
                padding: 4px;
            }
    </style>
</head>
<body>
    <div class="header">
        <h1>ENCUESTA DE ESTUDIANTES AL DOCENTE</h1>
    </div>

    <div class="info">
        <p><strong>Programa:</strong> @Model.Resumen?.PorcentajeEncuestados</p>
        <p><strong>Sección:</strong> @Model.Resumen?.PorcentajeEncuestados</p>
        <p><strong>NRC - Curso:</strong> @Model.Resumen?.PorcentajeEncuestados</p>
        <p><strong>Docente:</strong> @Model.Resumen?.PorcentajeEncuestados</p>
    </div>

    <p style="margin-top:10px;"><strong>Escala:</strong> 1 Muy Malo &nbsp; 2 Malo &nbsp; 3 Aceptable &nbsp; 4 Bueno &nbsp; 5 Muy Bueno</p>

    @foreach (var bloque in Model.Bloques)
    {
        <div class="bloque">
            <h3>@bloque.TituloBloque</h3>
            <table>
                <thead>
                    <tr>
                        <th style="width: 5%;">Nro</th>
                        <th style="width: 50%;">Enunciado</th>
                        <th style="width: 10%;">Promedio</th>
                        <th style="width: 7%;">1</th>
                        <th style="width: 7%;">2</th>
                        <th style="width: 7%;">3</th>
                        <th style="width: 7%;">4</th>
                        <th style="width: 7%;">5</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        var nro = 1;
                    }
                    @foreach (var pregunta in bloque.Preguntas)
                    {
                        <tr>
                            <td>@nro</td>
                            <td style="text-align:left;">@pregunta.TextoPregunta</td>
                            <td>@Math.Round(pregunta.Promedio, 2)</td>
                            <td>@(pregunta.Pct1?.ToString("0.##") ?? "0")%</td>
                            <td>@(pregunta.Pct2?.ToString("0.##") ?? "0")%</td>
                            <td>@(pregunta.Pct3?.ToString("0.##") ?? "0")%</td>
                            <td>@(pregunta.Pct4?.ToString("0.##") ?? "0")%</td>
                            <td>@(pregunta.Pct5?.ToString("0.##") ?? "0")%</td>
                        </tr>
                        nro++;
                    }
                    <tr>
                        <td colspan="2" style="text-align:right;"><strong>PROMEDIO DEL BLOQUE</strong></td>
                        <td colspan="6">@Math.Round(bloque.PromedioBloque ?? 0, 2)</td>
                    </tr>
                </tbody>
            </table>
        </div>
    }

    <div class="summary">
        <table>
            <tr><td><strong>Cantidad Encuestados:</strong></td><td>@Model.Resumen?.CantidadEncuestados</td></tr>
            <tr><td><strong>Número de Matriculados:</strong></td><td>@Model.Resumen?.CantidadMatriculados</td></tr>
            <tr><td><strong>Porcentaje Encuestados:</strong></td><td>@(Model.Resumen?.PorcentajeEncuestados?.ToString("0.##") ?? "0") %</td></tr>
            <tr><td><strong>Promedio Encuesta:</strong></td><td>@(Model.Resumen?.PromedioTotalScore?.ToString("0.00") ?? "0")</td></tr>
        </table>
    </div>

    <div class="footer">
        Generado automáticamente el @DateTime.Now.ToString("dd/MM/yyyy HH:mm")
    </div>
</body>
</html>
