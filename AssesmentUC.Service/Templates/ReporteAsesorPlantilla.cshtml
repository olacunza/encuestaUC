@model AssesmentUC.Service.DTO.ViewModel.ReporteEncuestaAsesorViewModel
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Encuesta Área Académica</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 40px;
            font-size: 12pt;
        }

        h1 {
            text-align: center;
            font-size: 18pt;
            margin-bottom: 20px;
        }

        .header {
            margin-bottom: 20px;
        }

            .header div {
                margin: 4px 0;
            }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 10px;
        }

        th, td {
            border: 1px solid #444;
            padding: 6px;
            text-align: left;
        }

        th {
            background-color: #efefef;
        }

        .resumen, .final {
            margin-top: 20px;
        }

            .resumen strong, .final strong {
                font-size: 12pt;
            }

        .comentarios {
            margin-top: 30px;
        }
    </style>
</head>
<body>

    <h1>ENCUESTA ÁREA ACADÉMICA HACIA EL DOCENTE</h1>

    <div class="header">
        <div><strong>Programa:</strong> @Model.Programa</div>
        <div><strong>Sección:</strong> @Model.Seccion</div>
        <div><strong>NRC - Curso:</strong> @Model.Curso</div>
        <div><strong>Docente:</strong> @Model.Docente</div>
    </div>

    <p>1 Muy Malo | 2 Malo | 3 Aceptable | 4 Bueno | 5 Muy Bueno</p>

    <table>
        <thead>
            <tr>
                <th>Nro</th>
                <th>Evaluación del Área Académica</th>
                <th>Evaluación</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var pregunta in Model.Preguntas)
            {
                <tr>
                    <td>@pregunta.Nro</td>
                    <td>@pregunta.TextoPregunta</td>
                    <td style="text-align:center;">@pregunta.Promedio</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="resumen">
        <strong>PROMEDIO ENCUESTA ÁREA ACADÉMICA AL DOCENTE:</strong> @Model.PromedioArea
    </div>

    <div class="final">
        <p><strong>Promedio Encuesta Estudiantes al Docente (75%)</strong> @Model.PromedioEstudiantes</p>
        <p><strong>Promedio Encuesta del Área Académica al Docente (15%)</strong> @Model.PromedioArea</p>
        <p><strong>Evaluación del Cumplimiento Modelo Académico (10%)</strong> @Model.ModeloAcademico</p>
        <p><strong>EVALUACIÓN FINAL DEL DOCENTE:</strong> @Model.EvaluacionFinal</p>
    </div>

    <div class="comentarios">
        <strong>COMENTARIOS:</strong>
        <p>@Model.Comentarios</p>
        <br>
        <strong>Gestión Académica</strong>
    </div>

    <div class="footer">
        Generado el @DateTime.Now.ToString("dd/MM/yyyy HH:mm")
    </div>

</body>
</html>
